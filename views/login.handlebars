<div class="signin-content">
    <div class="signin-image">
        <figure><img src="/images/signin-image.jpg" alt="sing in image"></figure>
        <a href="users/registration" class="signup-image-link">Создать аккаунт</a>
    </div>

    <div class="signin-form">
        <h2 class="form-title">Войти</h2>
        <form method="POST" class="register-form" id="login-form">
            <div class="form-group">
                <label for="your_email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                <input type="email" name="email" id="emailInput" placeholder="Ваш email"/>
            </div>
            <div class="form-group">
                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                <input type="password" name="password" id="your_pass" placeholder="Пароль"/>
            </div>
            <div class="form-group form-button">
                <input type="submit" name="signin" id="signin" class="form-submit" value="Увійти"/>
            </div>
        </form>

    </div>
</div>
</div>
</section>

</div>